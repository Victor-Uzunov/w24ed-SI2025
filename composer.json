{
    "name": "fmi/course-program-editor",
    "description": "FMI Course Program Editor and Dependency Visualizer",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.4",
        "tecnickcom/tcpdf": "^6.6",
        "ext-pdo": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "doctrine/instantiator": "1.4.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "php/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit tests",
        "test-coverage": "phpunit tests --coverage-html coverage",
        "cs": "phpcs --standard=PSR12 php/ tests/",
        "cs-fix": "phpcbf --standard=PSR12 php/ tests/",
        "phpstan": "phpstan analyse -l 5 php/ tests/",
        "build": [
            "@cs",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "7.4.33"
        }
    }
} 